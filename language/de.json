{
  "semantics": [
    {
      "name": "media",
      "type": "group",
      "label": "Bild",
      "fields": [
        {
          "name": "type",
          "type": "library",
          "label": "Art",
          "options": [
            "H5P.Image 1.0",
            "H5P.Video 1.2"
          ],
          "optional": true,
          "description": "Ein optionales Bild, welches über der Aufgabe gezeigt wird."
        }
      ]
    },
    {
      "label": "Beschreibung der Aufgabe",
      "name": "text",
      "type": "text",
      "widget": "html",
      "default": "Bitte die fehlenden Wörter eintragen",
      "description": "Hier soll der User Informationen bekommen, wie er in der Aufgabe antworten soll.",
      "enterMode": "p",
      "tags": [
        "strong",
        "em",
        "u",
        "a",
        "ul",
        "ol",
        "h2",
        "h3",
        "hr"
      ]
    },
    {
      "name": "questions",
      "type": "list",
      "label": "Text Blöcke",
      "entity": "text block",
      "min": 1,
      "max": 31,
      "field": {
        "name": "question",
        "type": "text",
        "widget": "html",
        "label": "Textzeile",
        "placeholder": "Berlin ist die Hauptstadt von *Deutschland*.",
        "description": "Die Lücken sind mit einem Stern (*) vor und hinter dem Wort oder Satz markiert. Die möglichen Antworten sind durch einen Schrägstrich (/) getrennt. Ein Tipp wird mit dem Doppelpunkt (:) gefolgt von der Hilfe hinzugefügt. Beispiel: H5P Übungen können einfach mit einem *Browser/Web-Browser:Ein tool um im Internet zu surfen* benutzt werden.",
        "enterMode": "p",
        "tags": [
          "strong",
          "em",
          "del",
          "u"
        ]
      }
    },
    {
      "label": "Wertung",
      "name": "score",
      "type": "text",
      "default": "@score von @total Felder",
      "description": "Mögliche Variablen: @score und @total. Beispiel: '@score von @total möglichen Punkten.'",
      "common": true
    },
    {
      "label": "Text für \"Hilfe\"",
      "name": "showSolutions",
      "type": "text",
      "default": "Hilfe",
      "common": true
    },
    {
      "label": "Text für \"Wiederholen\"",
      "name": "tryAgain",
      "type": "text",
      "default": "Wiederholen",
      "common": true,
      "optional": true
    },
    {
      "label": "Text für \"Überprüfen\"",
      "name": "checkAnswer",
      "type": "text",
      "default": "Überprüfen",
      "common": true,
      "optional": true
    },
    {
      "label": "Text bei nicht ausgefüllten Feldern",
      "name": "notFilledOut",
      "type": "text",
      "default": "Bitte das Feld ausfüllen",
      "common": true,
      "optional": true
    },
    {
      "name": "behaviour",
      "type": "group",
      "label": "Einstellungen.",
      "description": "Mit diesen Einstellungen kann das Aufgabenverhalten angepasst werden.",
      "optional": true,
      "fields": [
        {
          "label": "\"Wiederholen\" aktivieren",
          "name": "enableRetry",
          "type": "boolean",
          "default": true,
          "optional": true
        },
        {
          "label": "\"Lösung anzeigen\" aktivieren",
          "name": "enableSolutionsButton",
          "type": "boolean",
          "default": true,
          "optional": true
        },
        {
          "label": "Automatisch die Antworten nach der Eingabe überprüfen",
          "name": "autoCheck",
          "type": "boolean",
          "default": false,
          "optional": true
        },
        {
          "name": "caseSensitive",
          "type": "boolean",
          "default": true,
          "label": "Groß-/Kleinschreibung",
          "description": "Stellt sicher, daß der User Groß- und Kleinschreibung beachten muß."
        },
        {
          "label": "Alle Felder müssen ausgefüllt sein, bevor die Lösung angeschaut werden kann",
          "name": "showSolutionsRequiresInput",
          "type": "boolean",
          "default": true,
          "optional": true
        },
        {
          "label": "Eingabefelder in eigener Zeile anzeigen",
          "name": "separateLines",
          "type": "boolean",
          "default": false,
          "optional": true
        },
        {
          "label": "Bild-Vergrößerung bei Frage-Bildern deaktivieren",
          "name": "disableImageZooming",
          "type": "boolean",
          "default": false,
          "optional": true
        },
        {
          "label": "Bestätigungs-Text bei \"Überprüfen\"",
          "name": "confirmCheckDialog",
          "type": "boolean",
          "default": false
        },
        {
          "label": "Bestätigungs-Text bei \"Wiederholen\"",
          "name": "confirmRetryDialog",
          "type": "boolean",
          "default": false
        }
      ]
    },
